[Unit]
Description=Gunicorn website deamon
After=network.target

[Service]
PIDFile=/run/gunicorn/pid
User=gunicorn
Group=gunicorn
RuntimeDirectory=gunicorn
WorkingDirectory=/opt/redcraft_website
ExecStart=/opt/redcraft_website/env/bin/gunicorn --log-file=/var/log/redcraft/redcraft_website.log --pid /run/gunicorn/pid --bind 0.0.0.0:80 "redcraft_website.wsgi"
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
