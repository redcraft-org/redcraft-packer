{
    "builders": [
        {
            "access_key": "{{ user `access_key` }}",
            "commercial_type": "DEV1-S",
            "image": "cc9188b3-3938-47d7-b091-c9ecad1fe507",
            "image_name": "redcraft-vpn-{{ timestamp }}",
            "project_id": "{{ user `project_id` }}",
            "remove_volume": true,
            "secret_key": "{{ user `secret_key` }}",
            "snapshot_name": "redcraft-vpn-snapshot-{{ timestamp }}",
            "ssh_username": "root",
            "type": "scaleway",
            "zone": "{{ user `zone` }}"
        }
    ],
    "provisioners": [
        {
            "inline": [
                "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
            ],
            "type": "shell"
        },
        {
            "destination": "/tmp/motd.head",
            "source": "../../common/config/motd.head",
            "type": "file"
        },
        {
            "destination": "/tmp/users",
            "source": "../../common/users",
            "type": "file"
        },
        {
            "scripts": [
                "../../common/tasks/provision.sh"
            ],
            "type": "shell"
        },
        {
            "scripts": [
                "tasks/install_pritunl.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "access_key": "{{ env `SCW_ACCESS_KEY` }}",
        "project_id": "{{ env `SCW_DEFAULT_PROJECT_ID` }}",
        "secret_key": "{{ env `SCW_SECRET_KEY` }}",
        "zone": "{{ env `SCW_DEFAULT_ZONE` }}"
    }
}