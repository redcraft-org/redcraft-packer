{
    "builders": [
        {
            "api_token": "{{ user `api_token` }}",
            "commercial_type": "DEV1-S",
            "image": "aa547fdf-6a85-4029-a698-3583e0c3f06d",
            "image_name": "redcraft-laravel-{{ timestamp }}",
            "organization_id": "{{ user `organization_id` }}",
            "region": "par1",
            "remove_volume": true,
            "snapshot_name": "redcraft-laravel-snapshot-{{ timestamp }}",
            "ssh_username": "root",
            "type": "scaleway"
        }
    ],
    "provisioners": [
        {
            "inline": [
                "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
            ],
            "type": "shell"
        },
        {
            "destination": "/tmp/000-redcraft.conf",
            "source": "files/000-redcraft.conf",
            "type": "file"
        },
        {
            "destination": "/tmp/redcraft-worker.conf",
            "source": "files/redcraft-worker.conf",
            "type": "file"
        },
        {
            "scripts": [
                "tasks/install_laravel.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "api_token": "",
        "organization_id": ""
    }
}