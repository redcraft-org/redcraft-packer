{
    "builders": [
        {
            "api_token": "{{ user `api_token` }}",
            "commercial_type": "DEV1-S",
            "image": "5cb421de-df00-447c-913d-4d78f638dfbf",
            "image_name": "redcraft-mysql-{{ timestamp }}",
            "organization_id": "{{ user `organization_id` }}",
            "region": "par1",
            "remove_volume": true,
            "snapshot_name": "redcraft-mysql-snapshot-{{ timestamp }}",
            "ssh_username": "root",
            "type": "scaleway"
        }
    ],
    "provisioners": [
        {
            "inline": [
                "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
            ],
            "type": "shell"
        },
        {
            "destination": "/tmp/create_mysql_accounts.sql",
            "source": "files/create_mysql_accounts.sql",
            "type": "file"
        },
        {
            "scripts": [
                "tasks/install_mysql.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "api_token": "",
        "organization_id": ""
    }
}